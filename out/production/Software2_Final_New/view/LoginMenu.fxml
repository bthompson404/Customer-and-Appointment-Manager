<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginMenuController">
   <children>
      <VBox layoutX="85.0" layoutY="50.0" prefHeight="200.0" prefWidth="250.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label fx:id="usernameLabel" text="Username" />
                  <TextField fx:id="usernameText" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label fx:id="passwordLabel" text="Password" />
                  <PasswordField fx:id="passwordText" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#onActionLogin" text="Submit" />
                  <Button fx:id="quitButton" mnemonicParsing="false" onAction="#onActionExitProgram" text="Quit" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
